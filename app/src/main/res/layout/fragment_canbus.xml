<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CanbusFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:background="@android:color/background_light"
    tools:context=".fragments.CanbusFragment">


  <LinearLayout
      android:id="@+id/config"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="0.771"
      android:orientation="horizontal"
      android:weightSum="4"
      android:baselineAligned="false">

    <LinearLayout
        android:id="@+id/canConfiguration"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@drawable/border"
        android:orientation="vertical">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:text="Canbus configurations:"
          android:textColor="@color/colorPrimaryDark"
          android:textSize="13sp"
          />


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="select bitrate:"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="13sp"
            />

        <Spinner
            android:id="@+id/bitrateList"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
      </LinearLayout>


      <RadioGroup
          android:id="@+id/listenerModeGroup"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginLeft="10dp">

        <RadioButton
            android:id="@+id/lisModeOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Listener \nmode OFF"
            android:textSize="10sp"/>

        <RadioButton
            android:id="@+id/lisModeOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listener \nmode ON"
            android:textSize="10sp"/>

      </RadioGroup>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginLeft="10dp">

        <Button
            android:id="@+id/openCan"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="Open"
            android:textSize="13sp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/closeCan"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="Close"
            android:textSize="13sp"
            android:textAllCaps="false"/>
      </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/maskConfiguration"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@drawable/border"
        android:orientation="vertical">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:text="enter up to 6 HW filter IDs"
          android:textColor="@color/colorPrimaryDark"
          android:textSize="13sp"
          />
      <EditText
          android:id="@+id/hw_filter_ids"
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          android:layout_marginEnd="5dp"
          android:layout_marginTop="5dp"
          android:layout_marginStart="20dp"
          android:textSize="13sp"
          android:maxLines="1"
          android:inputType="text"
          android:imeOptions="actionDone"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:text="enter up to 2 HW mask types"
          android:textColor="@color/colorPrimaryDark"
          android:textSize="13sp"
          />

      <EditText
          android:id="@+id/hw_mask_types"
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          android:layout_marginEnd="5dp"
          android:layout_marginTop="5dp"
          android:layout_marginStart="20dp"
          android:textSize="13sp"
          android:maxLines="1"
          android:inputType="text"
          android:imeOptions="actionDone"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:text="1 SW ID and 1 SW Filter"
          android:textColor="@color/colorPrimaryDark"
          android:textSize="13sp"
          />
      <EditText
          android:id="@+id/sw_id_filter"
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          android:layout_marginEnd="5dp"
          android:layout_marginTop="5dp"
          android:layout_marginStart="20dp"
          android:textSize="13sp"
          android:maxLines="1"
          android:inputType="text"
          android:imeOptions="actionDone"
          />

    </LinearLayout>


  </LinearLayout>

  <LinearLayout
      android:id="@+id/dataConfiguration"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:orientation="horizontal"
      android:weightSum="2">

    <LinearLayout
        android:id="@+id/sendDataLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:orientation="vertical">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="20dp"
          android:text="enter data:"
          android:textColor="@color/colorPrimaryDark"
          android:textSize="13sp"
          />
      <EditText
          android:id="@+id/dataToSend"
          android:layout_width="150dp"
          android:layout_height="wrap_content"
          android:layout_marginEnd="5dp"
          android:layout_marginTop="5dp"
          android:layout_marginStart="20dp"
          android:textSize="13sp"
          android:maxLines="1"
          android:inputType="text"
          android:imeOptions="actionDone"
          />

      <Button
          android:id="@+id/sendData"
          android:layout_width="60dp"
          android:layout_height="40dp"
          android:layout_marginLeft="20dp"
          android:text="Send"
          android:textSize="13sp"
          android:textAllCaps="false"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/receiveData"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:orientation="vertical">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="20dp"
          android:text="received data:"
          android:textColor="@color/colorPrimaryDark"
          android:textSize="13sp"
          />

      <TextView
          android:id="@+id/receivedData"
          android:typeface="monospace"
          android:layout_width="150dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="10dp"
          android:maxLines="2"
          android:text=""
          android:textColor="@color/colorPrimaryDark"
          android:textSize="13sp"/>

      <Button
          android:id="@+id/clearData"
          android:layout_width="60dp"
          android:layout_height="40dp"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="20dp"
          android:text="Clear"
          android:textSize="13sp"
          android:textAllCaps="false"/>

    </LinearLayout>

  </LinearLayout>

</LinearLayout>
