      <LinearLayout
        android:id="@+id/RS232"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/border"
        android:orientation="vertical">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="5dp"
          android:text="RS232"
          android:textColor="@color/colorPrimaryDark"
          android:textStyle="bold"
          android:textSize="15sp"
          />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="select port:"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="13sp"
            />

          <Spinner
            android:id="@+id/SerialPortListRS232"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            />

        </LinearLayout>
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="select baudrate:"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="13sp"
            />

          <Spinner
            android:id="@+id/baudrateListRS232"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="enter data:"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="13sp"
            />
          <EditText
            android:id="@+id/customDataRS232"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:maxLines="1"
            android:inputType="text"
            android:imeOptions="actionDone"
            />

          <Button
            android:id="@+id/sendDataRS232"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="Send"
            android:textSize="13sp"
            android:textAllCaps="false"/>
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="received data:"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="13sp"
            />

          <TextView
            android:id="@+id/receivedDataRS232"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textSize="13sp"/>

          <Button
            android:id="@+id/clearDataRS232"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:text="Clear"
            android:textSize="13sp"
            android:textAllCaps="false"/>
        </LinearLayout>


      </LinearLayout>

      <LinearLayout
